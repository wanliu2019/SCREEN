{
  "name": "SCREENgraphql",
  "version": "0.0.1",
  "description": "Graphql API for SCREEN",
  "license": "ISC",
  "scripts": {
    "start": "npm run build && npm run watch",
    "build": "npm run build-ts && npm run tslint && npm run copy-static",
    "serve": "nodemon --delay 1 dist/app.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve\"",
    "test": "jest",
    "build-ts": "tsc --strictNullChecks",
    "watch-ts": "tsc -w --strictNullChecks",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --delay 1 --inspect dist/app.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "copy-static": "node copyStatic.js",
    "prettier": "./node_modules/.bin/prettier --write \"./{src,test}/**/*.{js,jsx,ts*}\"",
    "precommit": "yarn prettier && yarn build-ts"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/test/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "apollo-server-express": "^2.0.0",
    "dataloader": "^1.4.0",
    "express": "^4.15.4",
    "graphql": "^14.0.2",
    "graphql-type-json": "^0.2.1",
    "pg-promise": "^8.5.4",
    "raven": "^2.4.2",
    "request": "^2.83.0",
    "request-promise-native": "^1.0.5",
    "uuid": "^3.2.1",
    "uuid-validate": "^0.0.3"
  },
  "devDependencies": {
    "@types/express": "^4.0.35",
    "@types/express-graphql": "^0.6.2",
    "@types/graphql": "^14.0.4",
    "@types/jest": "^23",
    "@types/node": "^10.12.18",
    "@types/raven": "^2.5.1",
    "concurrently": "^4.1.0",
    "husky": "^1.3.1",
    "jest": "^23.5",
    "nodemon": "^1.11.0",
    "prettier": "^1.14",
    "shelljs": "^0.8.3",
    "ts-jest": "^23.0",
    "tslint": "^5.8.0",
    "typescript": "^3.0"
  },
  "peerDependencies": {},
  "prettier": {
    "printWidth": 120,
    "tabWidth": 4,
    "singleQuote": true,
    "semi": true,
    "trailingComma": "es5",
    "parser": "typescript"
  }
}
